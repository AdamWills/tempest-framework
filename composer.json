{
  "require": {
    "php": "^8.2",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.2",
    "larapack/dd": "^1.1",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.21"
  },
  "autoload": {
    "psr-4": {
      "Tempest\\": "src/",
      "App\\": "app/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Tempest\\": "tests/"
    }
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit",
    "csfixer": "vendor/bin/php-cs-fixer fix",
    "phpstan": "vendor/bin/phpstan analyse src tests app",
    "qa": [
      "composer phpstan",
      "composer phpunit",
      "composer csfixer"
    ]
  }
}
